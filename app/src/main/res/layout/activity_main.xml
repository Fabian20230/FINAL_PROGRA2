<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <!-- Botón para Iniciar Actividad -->
    <Button
        android:id="@+id/btnStartActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Actividad"
        android:backgroundTint="@color/boton_inicio"
        android:textColor="@color/texto_boton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- Botón para Finalizar Actividad -->
    <Button
        android:id="@+id/btnEndActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar Actividad"
        android:backgroundTint="@color/boton_final"
        android:textColor="@color/texto_boton"
        app:layout_constraintTop_toBottomOf="@id/btnStartActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Botón para Ver Historial -->
    <Button
        android:id="@+id/btnViewHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Historial"
        android:backgroundTint="@color/boton_inicio"
        android:textColor="@color/texto_boton"
        app:layout_constraintTop_toBottomOf="@id/btnEndActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
