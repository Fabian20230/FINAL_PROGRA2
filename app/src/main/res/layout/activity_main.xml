<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <!-- Botón para Iniciar Actividad -->
    <Button
        android:id="@+id/btnStartActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/boton_inicio"
        android:text="Iniciar Actividad"
        android:textColor="@color/texto_boton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />

    <!-- Botón para Finalizar Actividad -->
    <Button
        android:id="@+id/btnEndActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/boton_final"
        android:text="Finalizar Actividad"
        android:textColor="@color/texto_boton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnStartActivity"
        android:layout_marginTop="20dp" />

    <!-- Botón para Ver Historial -->

    <!-- Imagen de Inicio -->

    <!-- Imagen de Fin -->

    <!-- Descripción -->

    <Button
        android:id="@+id/btnViewHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/boton_inicio"
        android:text="Ver Historial"
        android:textColor="@color/texto_boton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnEndActivity" />

    <ImageView
        android:id="@+id/imgStart"
        android:layout_width="164dp"
        android:layout_height="209dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="88dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnViewHistory"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgEnd"
        android:layout_width="166dp"
        android:layout_height="211dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgStart"
        app:layout_constraintTop_toBottomOf="@id/btnViewHistory"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="316dp"
        android:layout_height="110dp"
        android:layout_marginBottom="68dp"
        android:text="Descripción de la Actividad"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>